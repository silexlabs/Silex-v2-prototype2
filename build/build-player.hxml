#########
# player JS
#########
-js ../bin/libs/silex/silex.js
-cp ../src/
-cp ../../Brix/src/
-cp ../../Cocktail/src/
#--no-traces
-debug
-lib hscript

-main silex.Silex
--macro brix.core.Builder.create('../src/index-player.html')

#-D brixdebug
-D disableEmbedHtml
-D noAutoStart
-D stopOnError

-D silexClientSide
-D silexDebug
-D redirectTraces


#########
# player Flash
#########

--next

-swf ../bin/libs/silex/silex.swf
-cp ../src/
-cp ../../Brix/src/
-cp ../../Cocktail/src/
-main silex.Silex
--macro brix.core.Builder.create('../src/index-player.html')
-lib hscript
--remap js:cocktail
-swf-version 10.2
#-D slpdebug
#-D disableEmbedHtml
-D noAutoStart
-D stopOnError

-D silexClientSide
-D redirectTraces

# only in js : -D silexDebug

#--no-traces

